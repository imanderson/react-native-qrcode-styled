{
  "name": "react-native-qrcode-styled",
  "version": "0.3.1",
  "description": "A fully customizable QR Code generator for React Native based on react-native-svg and javascript-qrcode.",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!lib/typescript/example",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "lint-fix": "eslint --fix \"**/*.{js,ts,tsx}\"",
    "prepack": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn install"
  },
  "keywords": [
    "react-native",
    "qrcode",
    "svg",
    "react-native-qrcode-svg",
    "react-native-qrcode",
    "qrcode-styled",
    "qr-generator",
    "rn-qr-generator"
  ],
  "repository": "https://github.com/imanderson/react-native-qrcode-styled",
  "author": "Daniel Tokkozhin <dan.t.a@mail.ru> (https://github.com/tokkozhin), Anderson (https://github.com/imanderson)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/imanderson/react-native-qrcode-styled/issues"
  },
  "homepage": "https://github.com/imanderson/react-native-qrcode-styled#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@commitlint/config-conventional": "^18.6.2",
    "@react-native/babel-preset": "0.73.21",
    "@react-native/eslint-config": "0.73.2",
    "@react-native/metro-config": "0.73.5",
    "@react-native/typescript-config": "0.73.1",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/jest": "^29.5.12",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "commitlint": "^18.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.6.3",
    "lefthook": "^1.6.12",
    "metro-react-native-babel-preset": "^0.77.0",
    "pod-install": "^0.2.0",
    "prettier": "2.8.8",
    "react": "^18.2.0",
    "react-native": "^0.73.4",
    "react-native-builder-bob": "^0.23.2",
    "react-native-svg": "^14.1.0",
    "release-it": "^17.1.0",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "qrcode": "^1.5.3"
  },
  "resolutions": {
    "@types/react": "18.2.56"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "engines": {
    "node": ">=18"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "packageManager": "yarn@4.2.2"
}
